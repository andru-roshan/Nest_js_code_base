generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model UserDetails {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  employee_name   String
  employee_salary Int
  employee_age    Int
  password        String
}
